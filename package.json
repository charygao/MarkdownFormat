{
  "name": "markdownformat",
  "displayName": "MarkdownFormat",
  "description": "MD格式化-我自己用的，还不是很稳定哦！",
  "version": "0.0.4",
  "publisher": "liushilive",
  "engines": {
    "vscode": "^1.21.0"
  },
  "categories": [
    "Languages",
    "Formatters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.reFormat",
        "title": "MarkdownFormat : 格式化MD"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.reFormat",
          "when": "editorLangId == markdown",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.6",
    "eslint": "^4.11.0",
    "@types/node": "^7.0.43",
    "@types/mocha": "^2.2.42"
  },
  "repository": {
    "type": "github",
    "url": "https://github.com/liushilive/MarkdownFormat"
  }
}